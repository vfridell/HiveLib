<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="504" Width="893" Loaded="Window_Loaded">
    <StackPanel>
        <Canvas Name="MainCanvas" MouseWheel="Canvas_MouseWheel" MouseDown="Canvas_MouseDown">
            <Canvas.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Open" Command="{Binding OpenCommand}"></MenuItem>
                </ContextMenu>
            </Canvas.ContextMenu>
            <Canvas.RenderTransform>
                <TransformGroup x:Name="transformGroup">
                    <ScaleTransform x:Name="scaleTransform"/>
                    <TranslateTransform x:Name="translateTransform"/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
        
    </StackPanel>
</Window>
